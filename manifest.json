{
  "name": "ChromeExtensionTest",
  "short_name": "ChromeExtensionTest",
  "version": "1.0.0",
  "description": "This is a test.",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "images/augury.png",
    "default_title": "Run Augury"
  },
  "background": {
    "scripts": [
      "build/background.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "node_modules/*",
    "build/*"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
