{
  "manifest_version": 2,
  "name": "Augury Firefox Demo",
  "version": "1.0.0",
  "description": "Firefox port of Augury.",
  "icons": {
  "32": "icons/augury.png"
  },
  "browser_action": {
    "default_icon": "icons/augury.png",
    "default_title": "Augury",
    "browser_style": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["backend.js"]
}
